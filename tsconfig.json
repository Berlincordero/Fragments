{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },

    // RN 0.81 + React 19 + Metro
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    // Evita ruidos de tipos de libs externas
    "skipLibCheck": true,

    // Si tienes tipos propios, mantenlos
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
